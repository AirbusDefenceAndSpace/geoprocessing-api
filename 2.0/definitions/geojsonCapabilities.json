{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/AirbusDefenceAndSpace/geoprocessing-api/feat/geoprocess-io-refactor/2.0/definitions/geojsonCapabilities.json",
  "description": "Geojson capabilities for geoprocess",
  "type": "object",
  "properties": {
    "taxonomies": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/taxonomy"
      },
      "minItems": 1,
      "uniqueItems": true
    }
  },
  "definitions": {
    "taxonomy": {
      "description": "Taxonomy reference",
      "type": "object",
      "required": [ "reference" ],
      "properties": {
        "reference": {
          "description": "URI or canonical reference name of the taxonomy definition",
          "type": "string"
        },
      }
    }
  }
}
